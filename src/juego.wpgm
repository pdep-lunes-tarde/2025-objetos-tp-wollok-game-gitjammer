import wollok.game.*
import tp.*


program juego {
    // Settings del juego van ac√°
    game.title("Shadow Mantle")
    game.height(15)
    game.width(15)
    game.cellSize(200)


    game.start()
    game.addVisual(player)

    // Movimeinto del jugador
    keyboard.w().onPressDo{player.mover("arriba")}
    keyboard.s().onPressDo{player.mover("abajo")}
    keyboard.d().onPressDo{player.mover("derecha")}
    keyboard.a().onPressDo{player.mover("izquierda")}

    // Debug
    keyboard.space().onPressDo{ game.say(player, player.direccion())}
}
